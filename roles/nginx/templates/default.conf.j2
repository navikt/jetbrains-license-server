server {
    listen       443 default_server ssl;
    server_name _;

    ssl_certificate      /etc/pki/tls/certs/{{ ansible_hostname }}.crt;
    ssl_certificate_key  /etc/pki/tls/private/{{ ansible_hostname }}.key;
    ssl_session_cache    shared:SSL:1m;
    ssl_session_timeout  5m;
    ssl_ciphers  HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers  on;

    location /hub/ {
        proxy_set_header    X-Forwarded-Host    $http_host;
        proxy_set_header    X-Forwarded-Proto   https;
        proxy_http_version  1.1;
        proxy_set_header    Host                $host;
        proxy_set_header    X-Forwarded-For     $remote_addr;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_pass          http://{{ jb_hub_listen_address }}:{{ jb_hub_port }}/;
    }

    location /upsource/ {
            proxy_set_header    X-Forwarded-Host    $http_host;
            proxy_set_header    X-Forwarded-Proto   https;
            proxy_http_version  1.1;
            proxy_set_header    Host                $host;
            proxy_set_header    X-Forwarded-For     $remote_addr;
            proxy_set_header    X-Real-IP           $remote_addr;

            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_pass_header Sec-Websocket-Extensions;

            proxy_pass          http://{{ jb_upsource_listen_address }}:{{ jb_upsource_port }}/;
        }

    location {{ jb_licensing_server_context }} {
        proxy_set_header    X-Forwarded-Host    $http_host;
        proxy_set_header    X-Forwarded-Proto   https;
        proxy_http_version  1.1;
        proxy_set_header    Host                $host;
        proxy_set_header    X-Forwarded-For     $remote_addr;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_pass          http://{{ jb_licensing_server_listen_address }}:{{ jb_licensing_server_port }};
    }
}
