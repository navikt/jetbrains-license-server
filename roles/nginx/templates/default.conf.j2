server {
    listen       443 ssl;
    server_name hub.jetbrains.gc.nav.no;

    ssl_certificate /etc/letsencrypt/live/hub.jetbrains.gc.nav.no/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/hub.jetbrains.gc.nav.no/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_set_header    X-Forwarded-Host    $http_host;
        proxy_set_header    X-Forwarded-Proto   https;
        proxy_http_version  1.1;
        proxy_set_header    Host                $host;
        proxy_set_header    X-Forwarded-For     $remote_addr;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_pass          http://{{ jb_hub_listen_address }}:{{ jb_hub_port }};
    }
}

server {
    listen 443 ssl;
    server_name upsource.jetbrains.gc.nav.no;

    ssl_certificate /etc/letsencrypt/live/upsource.jetbrains.gc.nav.no/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/upsource.jetbrains.gc.nav.no/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
            proxy_set_header    X-Forwarded-Host    $http_host;
            proxy_set_header    X-Forwarded-Proto   https;
            proxy_http_version  1.1;
            proxy_set_header    Host                $host;
            proxy_set_header    X-Forwarded-For     $remote_addr;
            proxy_set_header    X-Real-IP           $remote_addr;

            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_pass_header Sec-Websocket-Extensions;

            proxy_pass          http://{{ jb_upsource_listen_address }}:{{ jb_upsource_port }};
    }
}

